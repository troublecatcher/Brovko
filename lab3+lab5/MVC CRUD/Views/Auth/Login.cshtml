@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@model MVC_CRUD.Models.Login;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1>Вход</h1>
            <form>
                @Html.ValidationSummary(true)
                <div class="mb-3">
                    <input asp-for=Email type="email" class="form-control" placeholder="Email">
                    <span asp-validation-for=Email class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input asp-for=Password type="password" class="form-control" placeholder="Пароль">
                    <span asp-validation-for=Password class="text-danger"></span>
                </div>
                <div class="text-danger mb-3">@Accessor.HttpContext.Session.GetString("invalid")</div>
                <div class="mb-3">
                    <input class="btn btn-success" asp-controller="Auth" asp-action="Enter" type="submit" value="Войти!" />
                    <a class="btn btn-secondary" href="@Url.Action("Register", "Auth")">Зарегистрироваться</a>
                </div>
            </form>

        </div>
    </div>
</div>