@model MVC_CRUD.Models.Register
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Регистрация</h1>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <div class="mb-3">
                    Фамилия @Html.TextBoxFor(x => x.Surname)
                    <span asp-validation-for=Surname class="text-danger"></span>
                </div>
                <div class="mb-3">
                    Имя @Html.TextBoxFor(x => x.Name)
                    <span asp-validation-for=Name class="text-danger"></span>
                </div>
                <div class="mb-3">
                    Отчество @Html.TextBoxFor(x => x.Patro)
                    <span asp-validation-for=Patro class="text-danger"></span>
                </div>
                <div class="mb-3">
                    Телефон @Html.TextBoxFor(x => x.Phone)
                    <span asp-validation-for=Phone class="text-danger"></span>
                </div>
                <div class="mb-3">
                    Email @Html.TextBoxFor(x => x.Email)
                    <span asp-validation-for=Email class="text-danger"></span>
                </div>
                <div class="mb-3">
                    Пароль @Html.TextBoxFor(x => x.Password)
                    <span asp-validation-for=Password class="text-danger"></span>
                </div>
                <div class="mb-3">
                    Подтверждение пароля @Html.TextBoxFor(x => x.ConfirmPassword)
                    <span asp-validation-for=ConfirmPassword class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input class="btn btn-success" asp-controller="Auth" asp-action="NewUser" type="submit" value="Зарегистрироваться!" />
                </div>
                <div class="mb-3">
                     Уже есть аккаунт?
                    <input class="btn btn-primary" asp-controller="Auth" asp-action="Login" type="submit" value="Войти" />
                </div>
            }
        </div>
    </div>
</div>